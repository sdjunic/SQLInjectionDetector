	|	reference_type:t {: RESULT = t; :}
	;
	
primitive_type ::=
		numeric_type:str 
		{: 
			Obj type = Table.universe().findSymbol(str); 
			if (type != null && type instanceof Type) RESULT = new TypeReference((Type)type);
			else RESULT = null;
		:}
	|	BOOLEAN:str
		{: 
			Obj type = Table.universe().findSymbol(str); 
			if (type != null && type instanceof Type) RESULT = new TypeReference((Type)type);
			else RESULT = null;
		:}
	;
	
