super_ext ::= EXTENDS class_type:t {: RESULT = t; :}
	;
	
super_opt ::= {: RESULT = null; :}
	|	super_ext:t {: RESULT = t; :}
	;
	
interfaces ::=	IMPLEMENTS interface_type_list
	;
	
